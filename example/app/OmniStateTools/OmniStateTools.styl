#OmniStateTools
    position absolute
    top 0
    bottom 0
    right 0
    width 400px
    overflow auto
    background rgba(0 0 0 .75)
    color #fff

    ul li
        color #fff
        cursor pointer
        margin 0
        padding 0

        *
            color #fff
            font-weight 300
            font-size 12px
            margin 0

        .title
            font-weight 500
            margin 8px 0
            padding 10px 8px
            background rgba(0 0 0 .25)


            .msDiff
                color #b9b9b9
                display inline-block
                font-size 10px

            .time
                margin 0 10px 0 4px

            .date
                float right
                font-size 12px
                color #bbb

        .path
            display inline-block
            color #70ffa5
            float left
            margin 10px 10px
            font-size 12px
            line-height 12px

        .state
            display inline-block
            color #ccadff
            margin 10px 10px
            font-size 12px
            line-height 12px



    button.active
        background #c1effb
        border 0








